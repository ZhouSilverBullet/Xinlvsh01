    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/head_of_the_histogram"
            android:background="@drawable/calorie_each_shap"
            android:layout_below="@+id/next_layout"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/month_of_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="9æœˆ"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/White_forme"/>

            <LinearLayout
                android:id="@+id/div_mov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/completion_target"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_small_14"/>

                    <TextView
                        android:id="@+id/complation_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_small_add"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max_conviction"
                        android:textSize="@dimen/text_size_small_add"/>

                    <TextView
                        android:id="@+id/steps_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_small_add"/>


                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/White_forme"
                android:layout_below="@id/div_mov"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

        </RelativeLayout>


