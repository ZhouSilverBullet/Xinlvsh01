        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/delay_remind_text"-->
        <!--android:textSize="@dimen/text_size_small"-->
        <!--android:layout_below="@id/switch_the_ring_button_new"-->
        <!--android:layout_marginTop="16dp"/>-->

    <RelativeLayout
        android:id="@+id/choose_time_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@id/switch_the_ring_button_new"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/remind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_the_remind_time"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_color"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/pull_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/pull_conner"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/delay_data_show"
            android:layout_toRightOf="@id/remind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_small"
            android:gravity="right"
            android:layout_toLeftOf="@id/pull_icon"
            android:textColor="@color/direct_text_color"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black_color_transparent"/>

    </RelativeLayout>

    </RelativeLayout>
