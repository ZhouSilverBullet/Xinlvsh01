<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".slide.settinga.RingFragment"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <RelativeLayout
        android:id="@+id/switch_the_ring_button_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground">

        <CheckBox
            android:id="@+id/check_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:clickable="false"
            android:background="@drawable/remind_switch_selector"
            android:layout_marginEnd="8dp"
            android:layout_gravity="end|center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/phone_for_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_toLeftOf="@id/check_open"
            android:layout_marginRight="8dp">
            <TextView
                android:id="@+id/phone_remind_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_remind"
                android:textColor="@color/black_color"
                android:layout_toLeftOf="@+id/check_open"
                android:textSize="@dimen/text_size_small"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hang_up"
                android:textSize="12sp"
                android:visibility="gone"/>

        </LinearLayout>






        <View
            android:layout_below="@id/phone_for_ll"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black_color_transparent"/>


    </RelativeLayout>



