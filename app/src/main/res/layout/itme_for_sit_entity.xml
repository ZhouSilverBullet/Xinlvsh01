<?xml version="1.0" encoding="utf-8"?>
<com.huichenghe.xinlvshuju.CustomView.RemoveView
    android:id="@+id/remove_view_sit"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:rightwidth="80dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sit_remind_data"
            >

            <LinearLayout
                android:id="@+id/text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingEnd="16dp">
                <TextView
                    android:id="@+id/sit_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8:00-6:00"
                    android:textColor="@color/direct_text_color"
                    android:textSize="@dimen/text_size_small"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"/>

                <TextView
                    android:id="@+id/duration_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="8:00-6:00"
                    android:gravity="end"
                    android:textSize="@dimen/text_size_small"
                    android:padding="8dp"
                    android:layout_toLeftOf="@+id/right_ll"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/right_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/csv"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/black_color_transparent"
                android:layout_below="@id/text_layout"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/delete_sit_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@android:color/holo_red_light">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_delete"/>


        </LinearLayout>


    </LinearLayout>

</com.huichenghe.xinlvshuju.CustomView.RemoveView>