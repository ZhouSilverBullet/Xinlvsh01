<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.huichenghe.xinlvshuju.slide.HelpActivity">
    
    
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_help_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:fitsSystemWindows="true"
        android:clipToPadding="true"
        android:background="@color/White_forme"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="@string/help"
        android:gravity="center"
        android:textSize="@dimen/text_size_middle"
        android:textColor="@color/black_color"/>

    <View
        android:id="@+id/help_div"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black_color_transparent"
        android:layout_below="@id/toolbar_help_activity"/>
    <WebView
        android:id="@+id/web_view_help"
        android:layout_below="@id/help_div"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
