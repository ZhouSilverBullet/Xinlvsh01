<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="6dp"
    android:id="@+id/card_view_layout"
    >


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White_forme"
        >

        <TextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HRW-51111111100"
            android:textSize="@dimen/text_size_middle"
            android:layout_alignParentTop="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="20dp"
            android:textColor="@color/black_color"/>

        <LinearLayout
            android:id="@+id/device_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/device_name"
            >


            <TextView
                android:id="@+id/button_connecte"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/connecte_the_device"
                android:layout_margin="6dp"
                android:gravity="center"
                />


            <ImageView
                android:id="@+id/image_connect"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@mipmap/connect"
                android:padding="6dp"
                android:gravity="center"
                android:background="@color/White_forme"
                android:layout_margin="6dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/button_disconnect"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@mipmap/disconnect"
                android:padding="6dp"
                android:gravity="center"
                android:layout_margin="6dp"
                />



            <TextView
                android:id="@+id/connecte_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="bottom|right"
                android:paddingBottom="8dp"
                android:paddingEnd="18dp"
                android:text="12:00"
                />



        </LinearLayout>



    </RelativeLayout>






</android.support.v7.widget.CardView>
