<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"

    tools:context=".slide.settinga.InfoFragment">

    <RelativeLayout
        android:id="@+id/rl_rest_s"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <TextView
            android:id="@+id/title_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Notify_the_authority_down"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"

            />

        <ImageButton
            android:id="@+id/open_remind_one_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/right"
            android:layout_marginRight="10dp"
            android:background="@null"

            />

    </RelativeLayout>

    <View
        android:id="@+id/viwe_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#aa383535"
        android:layout_below="@+id/rl_rest_s"
        ></View>






    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_below="@+id/viwe_line"
        android:id="@+id/info_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/info_remind"
        android:textColor="@color/black_color"
        android:padding="16dp"

        android:textSize="@dimen/text_size_middle"/>


    <View
        android:id="@+id/line_info"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black_color_transparent"
        android:layout_below="@id/info_head"/>


    <RelativeLayout
        android:id="@+id/rl_each_info_for_remind"
        android:layout_width="wrap_content"
        android:layout_below="@id/line_info"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/each_info_for_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/reset_info"
        android:layout_below="@id/rl_each_info_for_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_centerHorizontal="true"
        />

    <CheckBox
        android:id="@+id/open_remind_s_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/remind_switch_selector"
        android:button="@null"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/rl_rest_s"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
