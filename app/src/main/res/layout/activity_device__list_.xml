<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huichenghe.xinlvshuju.slide.Device_List_Activity"
    android:background="@mipmap/device_list_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back_icon_new"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/device_list_a"
            android:textSize="@dimen/text_size_middle"
            android:layout_centerInParent="true"
            android:textColor="@color/black_color"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_device_type"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/black_color"/>

    <RelativeLayout
        android:id="@+id/hr_brachlet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">
        <ImageView
            android:id="@+id/hr_brachlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/brachlet_hr"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brachlet"
            android:layout_below="@id/hr_brachlet"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/select_icon_hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/birthday_select"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/blood_brachlet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">
        <ImageView
            android:id="@+id/blood_brachlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/brachlet_blood"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/watch"
            android:layout_below="@id/blood_brachlet"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/select_icon_blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/birthday_select"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    </RelativeLayout>



</LinearLayout>
