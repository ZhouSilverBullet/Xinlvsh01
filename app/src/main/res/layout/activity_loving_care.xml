<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".slide.AttionModle.LovingCareActivity"
    android:background="@mipmap/take_photo_background">

    <RelativeLayout
        android:id="@+id/head_bar_for_loving"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/care_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back_icon_new"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loving_care"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/black_color"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/care_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/add_attion"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"/>
    </RelativeLayout>

    <View
        android:id="@+id/div_loving_care"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_color"
        android:layout_below="@id/head_bar_for_loving"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_the_fimally"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/div_loving_care">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_for_loving_care"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"/>















    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
