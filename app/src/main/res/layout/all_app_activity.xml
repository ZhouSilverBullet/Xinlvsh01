<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/head_bar_for_setting"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/care_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back_icon_new"
            android:padding="16dp"/>
        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/third_app"
            android:textSize="@dimen/text_size_middle"
            android:textColor="@color/black_color"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/setting_title_div"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/head_bar_for_setting"
        android:background="@color/grey_color_dark"/>
    <ListView
        android:layout_below="@id/setting_title_div"
        android:id="@+id/lv_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
