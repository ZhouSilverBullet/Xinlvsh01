<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huichenghe.xinlvshuju.slide.AboutActivity"
    android:background="@color/White_forme">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_about_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:fitsSystemWindows="true"
        android:clipToPadding="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_color"
        android:layout_below="@id/toolbar_about_activity"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="@string/about"
        android:textSize="@dimen/text_size_middle"
        android:gravity="center"
        android:textColor="@color/black_color"/>

    <ImageView
        android:id="@+id/icon_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_luncher"
        android:layout_below="@id/toolbar_about_activity"
        android:layout_marginTop="42dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/sport_band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sport_band"
        android:layout_toRightOf="@id/icon_about"
        android:layout_below="@id/toolbar_about_activity"
        android:layout_marginTop="50dp"
        android:layout_marginStart="24dp"
        android:textSize="26sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/band_explain"
        android:layout_toRightOf="@id/icon_about"
        android:layout_below="@id/sport_band"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:layout_marginEnd="24dp"
        />


    <LinearLayout
        android:id="@+id/app_version_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/icon_about"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_viersion"
            android:textSize="16sp"
            android:layout_weight="1.6"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/app_version_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1.2"
            android:textColor="@color/direct_text_color"
            android:layout_weight="2"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/check_app_version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/check_update"
            android:gravity="center"
            android:drawableRight="@mipmap/enter_icon_white"
            android:drawablePadding="8dp"
            android:textSize="12sp"
            android:layout_weight="1.8"
            android:padding="6dp"
            />

    </LinearLayout>

    <View
        android:layout_below="@id/app_version_layout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_color"/>

    <View
        android:id="@+id/botton_line"
        android:layout_below="@+id/hard_version_layout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_color"/>

    <View
        android:layout_below="@+id/help_layout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_color"/>

    <LinearLayout
        android:id="@+id/hard_version_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/app_version_layout"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/hard_version"
            android:textSize="16sp"
            android:layout_weight="1.6"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/hard_version_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/disconnected"
            android:layout_weight="2"
            android:textSize="16sp"
            android:textColor="@color/direct_text_color"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/check_hard_version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/check_update"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:drawableRight="@mipmap/enter_icon_white"
            android:drawablePadding="8dp"
            android:layout_weight="1.8"
            android:padding="6dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/help_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/botton_line"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:textSize="16sp"
            android:layout_weight="1.6"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_vertical"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/enter_icon_white"
            android:paddingRight="8dp"/>

    </LinearLayout>

</RelativeLayout>
