<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_device_mene_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/active_kcal"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="@string/info_remind"
        android:textColor="@color/black_color"
        android:padding="12dp"
        android:textSize="@dimen/text_size_small" />

    <CheckBox
        android:id="@+id/open_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:background="@drawable/remind_switch_selector"
        android:button="@null" />
</RelativeLayout>
