<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/switch_info">


    <ImageView
        android:id="@+id/icon_head_info_rmind"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/info_rmind_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="短信新提醒"
        android:paddingLeft="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_toRightOf="@id/icon_head_info_rmind"
        android:layout_toLeftOf="@+id/swich_button_for_info_remind"
        android:textSize="@dimen/text_size_small"/>

    <CheckBox
        android:id="@+id/swich_button_for_info_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/remind_switch_selector"
        android:button="@null"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black_color_transparent"
        android:layout_below="@id/info_rmind_name"/>



</RelativeLayout>