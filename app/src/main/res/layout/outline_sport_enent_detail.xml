<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White_forme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main_background"
        >

        <ImageView
            android:id="@+id/close_the_window"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_icon_new"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/outline_sport_detail"
            android:gravity="center"
            android:textColor="@color/White_forme"
            android:textSize="@dimen/text_size_middle"
            />



    </RelativeLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_layout_for_movement"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>





</LinearLayout>
