    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_below="@id/line_info"-->
    <!--android:layout_marginBottom="80dp">-->




    <!--</android.support.v4.widget.SwipeRefreshLayout>-->

    <!--<View-->
    <!--android:id="@+id/line_info1"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_marginBottom="115dp"-->
    <!--android:background="#aa383535" />-->



    <TextView
        android:id="@+id/reset_info"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/tv_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_hudu"
        android:gravity="center"
        android:text="+"
        android:textColor="#fff"
        android:textSize="30sp"
        android:layout_above="@id/reset_info"/>

    <com.huichenghe.xinlvshuju.views.SwipeMenuRecyclerView
        android:id="@+id/appChecked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line_info"
        android:layout_above="@id/tv_add"/>

</RelativeLayout>